@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var keywords = Windy.WebMVC.Web2.SystemContext.Instance.PageInfo.Keywords;
}


<body style="margin:8px;">

    <form id="form_list" name="form_list" method="post" style="padding:2px;">
        <table id="tab_list"></table>
        <div id="tab_toolbar" style="padding:  2px;">
            <table cellpadding="0" cellspacing="0" style="width: 100%">
                <tr>
                    <td style="padding: 4px">
                        <a href="#" onclick="$('#form_edit input').val('');Add();return false;" id="a_add"
                           class="easyui-linkbutton" iconcls="icon-add">添加</a> <a href="#" onclick="DelData(0);return false;"
                                                                                  id="a_del" class="easyui-linkbutton" iconcls="icon-cancel">
                            删除
                        </a>
                        <a href="#" onclick="Stick(0);return false;"
                           id="a_stick" class="easyui-linkbutton" iconcls="icon-stick">
                            置顶
                        </a>
                        <a href="/home/CreateIndexView" target="_blank" ;
                           id="a_del" class="easyui-linkbutton" iconcls="icon-refresh">更新主页</a>
                        
                    </td>
                    <td style="text-align: right; padding-right: 15px">

                        类别：
                        <input id="search_CategoryID" style="width:200px" name="search_CategoryID" value="" />关键词：
                        <input id="search_keywords" name="search_keywords" type="text" />
                        标题名：
                        <input id="search_Title" name="search_Title" type="text" />

                        <a href="#" onclick="Search();return false;"
                           id="btnSearch" class="easyui-linkbutton" iconcls="icon-search">查询</a>
                    </td>
                </tr>
            </table>
        </div>
    </form>
    <div id="edit" class="easyui-dialog" title="新闻资讯"
         modal="true" closed="true" fit="true" data-options="iconCls:'icon-save',

        collapsible:true,
        resizable:false,"
         buttons="#edit-buttons">
        <div>
            <form id="form1">
                <div style="padding:5px">
                    <label>标题：</label>
                    <input name="Title" id="Title" missingmessage="标题不能为空" required='true' class='easyui-validatebox' style="width: 300px;" />
                </div>
                
                <div style="padding:5px">
                    <label>类别：</label>
                    <input id="CategoryID" style="width:200px" name="CategoryID" value="" required='true' />
                    <input id="btn_submit" class="btn-save" type="button" name="保存" value="" onclick="save()" />
                </div>
                <div style="padding:5px">
                    <textarea name="Content"></textarea>
                </div>
                <input type="hidden" name="ID" id="ID" value="" />
            </form>
        </div>
    </div>

    <script type="text/javascript">

        function close() {
            $('#edit').dialog('close');
        }
        var operator;
        //var editor = null;
        $(function () {
            initeditor();
            $("#search_CategoryID").combotree({
                url: "Category/GetComboxTreeJson?categorycode=advert",
            });
            InitGird();

            $("#edit").dialog({
                onClose: function () {
                    $("#tab_list").datagrid("reload");
                }
            });
            function myformatter(date) {
                var y = date.getFullYear();
                var m = date.getMonth() + 1;
                var d = date.getDate();
                return y + '-' + (m < 10 ? ('0' + m) : m) + '-' + (d < 10 ? ('0' + d) : d);
            }
            function myparser(s) {
                if (!s) return new Date();
                var ss = (s.split('-'));
                var y = parseInt(ss[0], 10);
                var m = parseInt(ss[1], 10);
                var d = parseInt(ss[2], 10);
                if (!isNaN(y) && !isNaN(m) && !isNaN(d)) {
                    return new Date(y, m - 1, d);
                } else {
                    return new Date();
                }
            }
        });
        //初始化表格
        function InitGird() {
            $('#tab_list').datagrid({
                title: '广告列表', //表格标题
                url: 'Advert/QueryData', //请求数据的页面
                sortName: 'ID', //排序字段
                idField: 'ID', //标识字段,主键
                iconCls: '', //标题左边的图标
                width: '98%', //宽度
                height: $(parent.document).find("#tabs").height() - 50 > 0 ? $(parent.document).find("#tabs").height() - 50 : 300, //高度
                nowrap: false, //是否换行，True 就会把数据显示在一行里
                striped: true, //True 奇偶行使用不同背景色
                collapsible: false, //可折叠
                sortOrder: 'desc', //排序类型
                remoteSort: true, //定义是否从服务器给数据排序
                frozenColumns: [[//冻结的列，不会随横向滚动轴移动
	                { field: 'cbx', checkbox: true },
                ]],
                columns: [[
                    {
                        title: '操作', field: 'ID', width: 80, formatter: function (value, rec) {
                            return '<a style="color:red" href="javascript:;" onclick="EditData(\'' + value + '\');$(this).parent().click();return false;">修改</a>&nbsp<a style="color:red" target="_blank"  href="/Advert/view/' + value + '.htm">预览</a>';
                        }
                    },
                    {
                        title: '图片', field: 'ImagePath', width: 50, formatter: function (value, rec) {
                            return '<img src=' + value + ' style="width:30px;height:30px;" />';
                        }
                    },
                    { title: '标题', field: 'Title', width: 300 },
                    { title: '类别', field: 'CategoryName', width: 100 },
                    { title: '创建时间', field: 'CreateTime', width: 120 },
                    { title: '创建人', field: 'CreateName', width: 100 },
                    { title: '修改时间', field: 'ModifyTime', width: 120 },
                    { title: '修改人', field: 'ModifyName', width: 100 }
                ]],
                toolbar: "#tab_toolbar",
                queryParams: { "action": "query", "CategoryID": $("#search_CategoryID").val(), "Title": $("#search_Title").val(), "keywords": $("#search_keywords").val() },
                pagination: true, //是否开启分页
                pageNumber: 1, //默认索引页
                pageSize: 10, //默认一页数据条数
                rownumbers: true //行号
            });
        }


        //初始化搜索框
        function Search() {
            $('#tab_list').datagrid('options').queryParams.CategoryID = $("[name='search_CategoryID']").val();;

            $('#tab_list').datagrid('options').queryParams.Title = $("#search_Title").val();

            $('#tab_list').datagrid('options').queryParams.keywords = $("#search_keywords").val();
            $("#tab_list").datagrid("reload");
            $("#tab_list").datagrid("clearChecked");

        }
        function GetInputData(id, cmd) {
            var postdata = "{ \"action\":\"" + cmd + "\",";
            $("#" + id + " input[type!='checkbox']").each(function () {
                postdata += "\"" + $(this).attr("name") + "\":\"" + $(this).val() + "\",";
            });
            $("#" + id + " input[type='checkbox']").each(function () {
                postdata += "\"" + $(this).attr("name") + "\":\"" + this.checked + "\",";
            });
            postdata = postdata.substr(0, postdata.length - 1);
            postdata += "}";
            return eval("(" + postdata + ")");
        }

        //提交按钮事件
        function Add() {
            $("#CategoryID").combotree({
                url: "Category/GetComboxTreeJson?categorycode=advert",
            });
            operator = "add";
            $("#form1").form("clear");
            $("#Keywords").val('@keywords');
            editor.setData("");
            $("#edit").dialog("open");
        }

        //修改链接 事件
        function EditData(id) {

            $("#CategoryID").combotree({
                url: "Category/GetComboxTreeJson",
            });
            $("#form1").form("clear");
            $.post("Advert/GetDetail", { "id": id }, function (data) {
                editor.setData(data.Content);
                $("#form1").form('load', data);
                if ($("#Keywords").val() == "")
                    $("#Keywords").val('@keywords');
            });
            operator = "edit";
            $("#edit").dialog("open");

        }

        //删除按钮事件
        function DelData(id) {
            $.messager.confirm('提示', '确认删除？', function (r) {
                if (r) {
                    var selected = "";
                    if (id <= 0) {
                        $($('#tab_list').datagrid('getSelections')).each(function () {
                            selected += this.ID + ",";
                        });
                        selected = selected.substr(0, selected.length - 1);
                        if (selected == "") {
                            $.messager.alert('提示', '请选择要删除的数据！', 'info');
                            return;
                        }
                    }
                    else {
                        selected = id;
                    }
                    $.post('Advert/Delete', { "cbx_select": selected }, function (data) {
                        $.messager.alert('提示', data, 'info', function () {
                            $("#tab_list").datagrid("reload");
                            $('#tab_list').datagrid('clearSelections');
                        });
                    });
                }
            });
        }
        //置顶按钮事件
        function Stick(id) {
            $.messager.confirm('提示', '确认置顶吗？', function (r) {
                if (r) {
                    var selected = "";
                    if (id <= 0) {
                        $($('#tab_list').datagrid('getSelections')).each(function () {
                            selected += this.ID + ",";
                        });
                        selected = selected.substr(0, selected.length - 1);
                        if (selected == "") {
                            $.messager.alert('提示', '请选择要置顶的文章！', 'info');
                            return;
                        }
                    }
                    else {
                        selected = id;
                    }
                    $.post('Advert/Stick', { "cbx_select": selected }, function (data) {
                        $.messager.alert('提示', data, 'info', function () {
                            $("#tab_list").datagrid("reload");
                            $('#tab_list').datagrid('clearSelections');
                        });
                    });
                }
            });
        }
        function save() {
            if (!$("#form1").form("validate")) {
                return;
            }

            var ID = $("[name='ID']").val()
            var Title = $("[name='Title']").val();
            var CategoryID = $("[name='CategoryID']").val();
            var Content = editor.getData();

            if (operator == "edit") {
                $.post("Advert/Edit", { "ID": ID, "Title": Title,  "CategoryID": CategoryID, "Content": Content }, function (data) {
                    $.messager.alert('提示', data, 'info', function () {

                    });
                });
            }
            else {
                $.post("Advert/Add", { "Title": Title,  "CategoryID": CategoryID, "Content": Content }, function (data) {
                    var result = eval("(" + data + ")");
                    $.messager.alert('提示', result.msg, 'info', function () {
                        if (result.msg.indexOf("成功") > 0) {
                            $("[name='ID']").val(result.id)
                            operator = "edit";
                        }
                    });
                });
            }
        }
    </script>
</body>